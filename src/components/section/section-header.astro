---
import {
  getDataAttributes,
  getImageUrlFromFormat,
} from "../../lib/strapi-utils";
interface Props {
  title: string;
  cover: any;
}

const { title, cover } = Astro.props;
const imageUrl = getImageUrlFromFormat(
  getDataAttributes(cover.image),
  "original"
);
---

<header
  class="section-header relative h-screen min-h-screen p-10 flex flex-row justify-center items-center md:gap-10"
>
  <div class="section-header__title w-1/3">
    <h2 class="text-4xl text-slate-700">{title}</h2>
  </div>
  <div class="section-header__cover h-full flex px-0 py-20 md:p-10">
    <img
      class="aspect-video object-cover rounded-xl shadow-2xl perspective"
      src={imageUrl}
      alt=""
    />
  </div>
</header>

<style>
  .section-header {
    perspective: 10px;
    transform-style: preserve-3d;
    z-index: -1;
  }

  .section-header__cover {
    transform: translateZ(3px) scale(0.5);
  }
  .perspective {
    transform: perspective(600px) rotateY(-15deg) rotateZ(2deg) rotateX(5deg);
  }
</style>
